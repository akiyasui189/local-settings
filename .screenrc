#############################
# .screenrc                 #
#       by akiyasui189      #
#############################

autodetach on
bell_msg "^G"
defscrollback 10000
startup_message off
vbell off

caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb}%y/%m/%d(%D) %{=b wm}%c"

# Encoding
defutf8 on
defencoding utf8
encoding utf8 utf8

# Key Command
escape ^Zz

bind m screen
bind b prev
bind n next
bind l windowlist

# change
bind q only
bind Q xon
bind s split
bind S xoff
bind x remove
bind X lockscreen

##### EOF
